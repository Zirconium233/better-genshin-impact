<ui:FluentWindow x:Class="BetterGenshinImpact.View.Windows.AIEnvInputDialog"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 xmlns:emoji="clr-namespace:Emoji.Wpf;assembly=Emoji.Wpf"
                 Width="600"
                 Height="600"
                 MinWidth="500"
                 MinHeight="350"
                 ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
                 ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                 ExtendsContentIntoTitleBar="True"
                 FontFamily="{DynamicResource TextThemeFontFamily}"
                 ResizeMode="CanResize"
                 WindowBackdropType="Mica"
                 WindowStartupLocation="CenterOwner"
                 mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ui:TitleBar Title="AI环境 - 人工调度器" Grid.Row="0">
            <ui:TitleBar.Icon>
                <ui:ImageIcon Source="pack://application:,,,/Resources/Images/logo.png" />
            </ui:TitleBar.Icon>
        </ui:TitleBar>

        <StackPanel Grid.Row="1" Margin="20">
            <!-- 标题和说明 -->
            <emoji:TextBlock Text="🎮 动作脚本输入" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Margin="0,0,0,10" />
            
            <emoji:TextBlock Text="请输入动作脚本指令，支持以下格式：" 
                           FontSize="14" 
                           Margin="0,0,0,15" 
                           Foreground="{DynamicResource TextFillColorSecondaryBrush}" />

            <!-- 帮助信息 -->
            <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="15"
                    Margin="0,0,0,20">
                <StackPanel>
                    <emoji:TextBlock Text="📋 支持的动作指令：" 
                                   FontWeight="Bold" 
                                   FontSize="14" 
                                   Margin="0,0,0,8" />
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="• w(1.0) - 向前移动1秒" FontSize="12" Margin="0,2" />
                            <TextBlock Text="• a(0.5) - 向左移动0.5秒" FontSize="12" Margin="0,2" />
                            <TextBlock Text="• s(1.0) - 向后移动1秒" FontSize="12" Margin="0,2" />
                            <TextBlock Text="• d(0.5) - 向右移动0.5秒" FontSize="12" Margin="0,2" />
                            <TextBlock Text="• attack(2) - 攻击2次" FontSize="12" Margin="0,2" />
                            <TextBlock Text="• attack(0.5) - 持续攻击0.5秒" FontSize="12" Margin="0,2" />
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="• e - 元素技能" FontSize="12" Margin="0,2" />
                            <TextBlock Text="• q - 元素爆发" FontSize="12" Margin="0,2" />
                            <TextBlock Text="• jump - 跳跃" FontSize="12" Margin="0,2" />
                            <TextBlock Text="• charge(1.5) - 重击1.5秒" FontSize="12" Margin="0,2" />
                            <TextBlock Text="• sw(2) - 切换到2号角色" FontSize="12" Margin="0,2" />
                        </StackPanel>
                    </Grid>
                    
                    <emoji:TextBlock Text="💡 示例：w(1.0),attack(3),attack(0.5),e,q,sw(2),charge(1.5)"
                                   FontSize="12" 
                                   Margin="0,10,0,0" 
                                   FontStyle="Italic"
                                   Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}" />
                </StackPanel>
            </Border>

            <!-- 输入区域 -->
            <emoji:TextBlock Text="🖊️ 输入动作脚本：" 
                           FontSize="14" 
                           FontWeight="Bold" 
                           Margin="0,0,0,8" />
            
            <TextBox Name="InputTextBox"
                     Height="80"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     FontFamily="Consolas"
                     FontSize="13"
                     Padding="10"
                     Margin="0,0,0,20" />

            <!-- 按钮区域 -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <ui:Button Name="BtnCancel"
                           Content="取消"
                           Margin="0,0,10,0"
                           Padding="20,8"
                           Click="BtnCancelClick" />
                
                <ui:Button Name="BtnOk"
                           Content="执行"
                           Appearance="Primary"
                           Padding="20,8"
                           IsDefault="True"
                           Click="BtnOkClick" />
            </StackPanel>
        </StackPanel>
    </Grid>
</ui:FluentWindow>
